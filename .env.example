# ============================================
# Telegram Bot Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# Command: cp .env.example .env

# Telegram Bot Token (required)
# Get from: https://t.me/BotFather
BOT_TOKEN=your_telegram_bot_token_here

# Admin User IDs (required)
# Comma-separated list of Telegram user IDs
# Get your ID from: https://t.me/userinfobot
ADMIN_IDS=123456789,987654321

# Required Channel (required)
# Channel username that users must join before using bot
# Format: @channelname or comma-separated for multiple channels
REQUIRED_CHANNEL=@yourchannel

# Download Limits (optional)
# Daily download limit for free users
FREE_DAILY_LIMIT=10

# Daily download limit for VIP users
VIP_DAILY_LIMIT=100

# ============================================
# Trakteer Payment Configuration
# ============================================
# Trakteer API Key (required for VIP features)
# Get from: https://trakteer.id/settings/api
TRAKTEER_API_KEY=your_trakteer_api_key_here

# Trakteer Username (required for VIP features)
# Your Trakteer username (without @)
TRAKTEER_USERNAME=yourusername

# ============================================
# Database Configuration
# ============================================
# SQLite database file path (optional)
DATABASE_PATH=database.db

# ============================================
# Logging Configuration
# ============================================
# Debug mode (optional, default: False)
DEBUG=False

# Log level (optional, default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
